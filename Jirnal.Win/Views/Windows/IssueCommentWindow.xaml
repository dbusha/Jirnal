<Window x:Class="Jirnal.Win.Views.Windows.IssueCommentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:panes="clr-namespace:Jirnal.Win.Views.Panes"
        xmlns:viewModels="clr-namespace:Jirnal.Win.ViewModels"
        mc:Ignorable="d"
        Title="{Binding CommentTitle}"
        Height="450" Width="800"
        ResizeMode="CanResizeWithGrip"
        d:DataContext="{d:DesignInstance Type=viewModels:IssueVm}">
    <Grid Margin="10">
        <panes:CommentEditorPane x:Name="CommentPane"/>
    </Grid>
</Window>
